<bml id="b1" agent="Alfonse">

   <!-- Alfonse's speech -->
   <speech id="s" voice="Spike">
     <text>
        <sync id="0" /> Welcome, <sync id="1" />  my name is Alfonse,
        <sync id="2" /> I will show you virtual character <sync id="3" />
        technology.
    </text>
   </speech>

   <!-- Amber's speech -->
   <speech id="s2" wait="0.5" agent="Amber" voice="Prudence">
     <text>
        This is a very good idea.
    </text>
   </speech>

   <!-- Alfonse's nonverbals -->
   <gesture id="g1" type="lexicalized" lexeme="cup_LH" stroke_start="s:1" />
   <gesture id="g2" type="lexicalized" lexeme="bridge_RH" stroke_end="s:3"/>

   <face id="f1" type="happy" stroke_start="s:0" stroke_end="s:2"/>
   <face id="f2" type="eyebrows" stroke_start="s:2" stroke_end="s:2+0.5"/>

   <!-- Amber's nonverbals -->
   <gesture id="g3" agent="Amber" type="lexicalized" lexeme="FINGERRING_LH"
     stroke_end="n3:stroke_end"/>
   <gesture id="n2" agent="Amber" type="lexicalized" lexeme="NOD" stroke_end="g1:stroke_end"/>
   <gesture id="n3" agent="Amber" type="lexicalized" lexeme="NOD" stroke_end="g2:stroke_end"/>
   <gesture id="h3" type="lexicalized" lexeme="TILT" stroke_end="g3:stroke_start"/>

</bml>
